<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".controller.SplashScreenActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/pc1"
 />

    <TextView
        android:id="@+id/activity_splash_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Computer Science Quiz"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:fontFamily="@font/bangers"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="489dp" />

    <TextView
        android:id="@+id/activity_splash_slogan_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Testez votre connaissance en informatique"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="554dp" />

</LinearLayout>